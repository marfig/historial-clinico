<div class="modal fadeIn" id="modalAddUsuario">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title">Agregar Usuario</h4>
            </div>
            <div class="modal-body">
                <form id="formAddUsuario" autocomplete="off">
                    <div class="form-group">
                        <input type="text" name="username" autocomplete="off" placeholder="Usuario" class="form-control validate" data-validation-message="Debe ingresar el nombre de usuario">
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" autocomplete="off" placeholder="Email" class="form-control validate" data-validation-message="Debe ingresar el email">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">
                    Cerrar
                </button>
                <button id="btnAddUsuario" type="button" class="btn btn-primary btn-lg">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>