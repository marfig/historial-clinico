@model HistorialClinico.Web.Models.Paciente.ResumenPacienteModel

<input id="PacienteId" type="hidden" value="@ViewBag.PacienteId" />

<div id="widget-grid" class="">

    <!-- row -->
    <div class="row">

        <!-- NEW WIDGET START -->
        <article class="col-lg-12 sortable-grid ui-sortable">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-darken jarviswidget-sortable" id="wid-id-0" data-widget-editbutton="false" data-widget-deletebutton="false">

                <header role="heading" class="ui-sortable-handle">
                    <span class="widget-icon"> <i class="fa fa-check"></i> </span>

                    <h2>Resumen Paciente</h2>

                    <a href="/Paciente/Add/@ViewBag.PacienteId" class="btn pull-right" style="color: white">
                        <i class="glyphicon glyphicon-pencil"></i>
                        <span> Editar</span>
                    </a>

                    <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                </header>

                <!-- widget div-->
                <div>

                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body">

                        <div class="smart-form">
                            <section>
                                <strong class="col-md-1">Nombre: </strong>
                                <span>@Model.Nombre</span>
                            </section>
                            <section class="form-group">
                                <strong class="col-md-1">Fecha Nacimiento: </strong>
                                <span>@string.Format("{0}", Model.FechaNacimiento.HasValue ? Model.FechaNacimiento.Value.ToString("dd/MM/yyyy") : "")</span>
                            </section>
                            <section class="form-group">
                                <strong class="col-md-1">Edad: </strong>
                                <span>@Model.Edad</span>
                            </section>
                            <section class="form-group">
                                <strong class="col-md-1">Sexo: </strong>
                                <span>@Model.Sexo</span>
                            </section>
                            <section class="form-group">
                                <strong class="col-md-1">Grupo Sangu&iacute;neo: </strong>
                                <span>@Model.GrupoSanguineo</span>
                            </section>
                        </div>

                        <br />

                        <div class="row">
                            <div class="tabs">
                                <ul class="nav nav-tabs tabs-left" id="demo-pill-nav">
                                    <li class="active">
                                        <a href="#tab-r1" data-toggle="tab"> <span class="hidden-mobile">Ap. Cardiovascular</span> <span class="visible-mobile hidden-desktop">Cardio</span> </a>
                                    </li>
                                    <li>
                                        <a href="#tab-r2" data-toggle="tab"><span class="hidden-mobile">Ap. Respiratorio</span> <span class="visible-mobile hidden-desktop">Resp.</span></a>
                                    </li>
                                    <li>
                                        <a href="#tab-r3" data-toggle="tab"><span class="hidden-mobile">Infectol&oacute;gico</span> <span class="visible-mobile hidden-desktop">Infect.</span></a>
                                    </li>
                                    <li>
                                        <a href="#tab-r4" data-toggle="tab"><span class="hidden-mobile">Hidr/Metab/Nutr</span> <span class="visible-mobile hidden-desktop">HMN</span></a>
                                    </li>
                                    <li>
                                        <a href="#tab-r5" data-toggle="tab"><span class="hidden-mobile">Sist. Nervioso Central</span> <span class="visible-mobile hidden-desktop">SNC</span></a>
                                    </li>
                                    <li>
                                        <a href="#tab-r6" data-toggle="tab"><span class="hidden-mobile">Hematol&oacute;gico</span> <span class="visible-mobile hidden-desktop">Hem</span></a>
                                    </li>
                                    <li>
                                        <a href="#tab-r7" data-toggle="tab"><span class="hidden-mobile">Cirug&iacute;a</span> <span class="visible-mobile hidden-desktop">Cirug..</span></a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab-r1" style="overflow: hidden">
                                        <div id="divApCardiovascular" class="padding-10"></div>
                                    </div>
                                    <div class="tab-pane" id="tab-r2">
                                        <div id="divApRespiratorio" class="padding-10"></div>
                                    </div>
                                    <div class="tab-pane" id="tab-r3">
                                        <div id="divInfectologico" class="padding-10"></div>
                                    </div>
                                    <div class="tab-pane" id="tab-r4">
                                        <div id="divHMN" class="padding-10"></div>
                                    </div>
                                    <div class="tab-pane" id="tab-r5">
                                        <div id="divSNC" class="padding-10"></div>
                                    </div>
                                    <div class="tab-pane" id="tab-r6">
                                        <div id="divHematologico" class="padding-10"></div>
                                    </div>
                                    <div class="tab-pane" id="tab-r7">
                                        <div id="divCirugia" class="padding-10"></div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->

        </article>
    </div>

    <!-- end row -->
</div>



@section Scripts{
    <script src="~/js/paciente/paciente.evolucion.resumen.js"></script>
}
