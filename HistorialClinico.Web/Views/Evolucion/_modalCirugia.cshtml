<div class="modal fadeIn" id="modalCirugia">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title">Cirugía</h4>
            </div>
            <div class="modal-body">
                <fieldset>
                    <legend>Tuvo Cirugía</legend>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                Sí <input name="TuvoCirugia" type="radio" value="SI" />
                                No <input name="TuvoCirugia" type="radio" value="NO" />
                            </div>
                            <div class="form-group">
                                <label>Técnica</label>
                                <input name="Tecnica" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Hallazgos</label>
                                <input name="Hallazgos" class="form-control" />
                            </div>
                        </div>
                    </div>
                </fieldset>

                <fieldset>
                    <legend>Procedimiento</legend>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                Sí <input name="Procedimiento" type="radio" value="SI" />
                                No <input name="Procedimiento" type="radio" value="NO" />
                            </div>
                            <div class="form-group">
                                <label>¿Cuál?</label>
                                <input name="CualProcedimiento" class="form-control" />
                            </div>
                        </div>
                    </div>
                </fieldset>

                <fieldset>
                    <legend>Otras Acotaciones</legend>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <textarea name="OtrasAcotaciones" class="form-control input-lg"></textarea>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Cerrar
                </button>
                <button type="button" class="btn btn-primary" onclick="GuardarFormularioCirugia(this); return false;">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>